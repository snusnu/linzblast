package {  	import flash.display.Sprite;	import flash.ui.Mouse;	import flash.net.*;	import flash.events.*;		// as3corelib json inlcude	import com.adobe.serialization.json.*; 		public class HUDStyle extends Sprite {	  	  // game elements	  private var gameStage:Game              = null;	  private var styleSelector:StyleSelector = null;	  private var gui:HudStyleDisplay         = null;	  	  // metadata	  private var _currentStyleData     = null;	  	  	  public function HUDStyle(gameStage:Game) {	    this.gameStage     = gameStage;      this.styleSelector = new StyleSelector(this.gameStage, this);      this.gui           = new HudStyleDisplay();            initializeGui();		}				// called by styleSelector event listener		public function set currentStyleData(currentStyleData) {		  this._currentStyleData = currentStyleData;		}				public function get currentStyleData() {		  return this._currentStyleData;		}				private function initializeGui() {		  addChild(gui);      gui.x = 20;      gui.y = gameStage.stage.stageHeight - gui.height - 20;      gui.addEventListener(MouseEvent.CLICK, showStyleSelector);      this.gameStage.styleSelector = styleSelector;		}				private function showStyleSelector(event:Event) {		  this.styleSelector.show();		}		  }}