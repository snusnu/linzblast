<h1>posts</h1>
 
<table>
  <tr>
    <th>body</th>
    <th>style</th>
    <th>background color</th>
    <th>text color</th>
    <th>created at</th>
  </tr>
 
<% @posts.each do |post| %>
  <tr>
    <td><%=h post.body %></td>
    <td><%=h post.style_name %></td>
    <td><%=h post.background_color %></td>
    <td><%=h post.text_color %></td>
    <td><%=h post.created_at %></td>
 
    <td><%= link_to 'show', resource(:admin, post) %></td>
  </tr>
<% end %>
</table>
 
<%= link_to 'new post', resource(:admin, :posts, :new) %>