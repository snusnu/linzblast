<h3>posts</h3>
 
<table class="resources">
	<thead>
	  <tr>
	    <th>id</th>
	    <th>wall</th>
	    <th>style</th>
	    <th>body</th>
	    <th>created</th>
			<th>delete</th>
	  </tr>
	</thead>
  <tfoot>
  	<tr><td></td></tr>
  </tfoot>
	<tbody>
		<% @posts.each do |post| %>
		  <tr>
		    <td><%=h post.id %></td>
		    <td><%= link_to post.wall_name, resource(:admin, post.wall) %></td>
		    <td><%= link_to post.style_name, resource(:admin, post.style) %></td>
		    <td><%=h post.body %></td>
		    <td class="date"><%=h post.created_at.formatted(:dmy) %></td>
		    <td class="action"><%= delete_button resource(:admin, post) %></td>
		  </tr>
		<% end %>
</tbody>
</table>
